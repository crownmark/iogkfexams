@page "/exam-templates"

@attribute [Authorize]
@inject Microsoft.Extensions.Localization.IStringLocalizer<ExamTemplates> L

<PageTitle>IOGKF Exam Templates</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Exam Templates" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
            <RadzenDataGrid @ref="grid0" ColumnWidth="200px" IsLoading="@gridLoading" Responsive="true" AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@(examTemplates)" LoadData="@Grid0LoadData" Count="@count" TItem="IOGKFExams.Server.Models.IOGKFExamsDb.ExamTemplate" RowSelect="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="IOGKFExams.Server.Models.IOGKFExamsDb.ExamTemplate" Property="ExamTemplateId" Title="Exam Template Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="IOGKFExams.Server.Models.IOGKFExamsDb.ExamTemplate" Property="ExamTemplateTitle" Title="Exam Template Title">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="IOGKFExams.Server.Models.IOGKFExamsDb.ExamTemplate" Property="Active" Title="Active">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="IOGKFExams.Server.Models.IOGKFExamsDb.ExamTemplate" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="examTemplate">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, examTemplate)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
                <HeaderTemplate>
                    <RadzenStack AlignItems="Radzen.AlignItems.Start">
                        <RadzenButton Icon="refresh" Style="width: 36px" Click="@RefreshGridButtonClick" ButtonStyle="Radzen.ButtonStyle.Secondary" MouseEnter="@RefreshGridButtonMouseEnter" MouseLeave="@RefreshGridButtonMouseLeave"></RadzenButton>
                    </RadzenStack>
                </HeaderTemplate>
        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
