@page "/add-exam"
@inject Microsoft.Extensions.Localization.IStringLocalizer<AddExam> L

@attribute [Authorize]

<PageTitle>Add Exam</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Exam</RadzenAlert>
        <RadzenTemplateForm TItem="IOGKFExams.Server.Models.IOGKFExamsDb.Exam" Data="@(exam)" Visible="@(exam != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="Exam Guid" Variant="Variant.Outlined" Visible="false">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@(exam.ExamGuid)" Name="ExamGuid" MaxLength="10" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Exam Type" Variant="Variant.Outlined">
                  <ChildContent>
                      <RadzenDropDown TValue="int" ValueProperty="ExamTemplateId" TextProperty="ExamTemplateTitle" Data="@examTemplates" LoadData="@examTemplatesLoadData" Count="@examTemplatesCount" @bind-Value="@selectedTemplate"/>
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Exam Status" Variant="Variant.Outlined" Visible="false">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@(examStatusesForExamStatusId)" TextProperty="Title" ValueProperty="ExamStatusId" AllowClear=true
                          style="display: block; width: 100%" @bind-Value="@(exam.ExamStatusId)" Name="ExamStatusId"
                        SelectedValue=@examStatusesForExamStatusIdValue Count=@examStatusesForExamStatusIdCount LoadData=@examStatusesForExamStatusIdLoadData />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Created Date" Variant="Variant.Outlined" Visible="false">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@(exam.CreatedDate)" Name="CreatedDate" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Completed Date" Variant="Variant.Outlined" Visible="false">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@(exam.CompletedDate)" Name="CompletedDate" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Exam Grade" Variant="Variant.Outlined" Visible="false">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@(exam.ExamGrade)" Name="ExamGrade" />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Create Exam" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

